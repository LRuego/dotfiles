# mouse-scroll-multiplier = 1

# --- Keybindings ---
keybind = clear

# System & Config
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = alt+shift+,=reload_config
keybind = alt+shift+p=toggle_command_palette
keybind = alt+shift+i=show_gtk_inspector
keybind = alt+shift+s=write_screen_file:open

# Tabs
keybind = alt+shift+t=new_tab
keybind = alt+tab=next_tab
