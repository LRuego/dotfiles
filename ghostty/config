keybind = ctrl+tab=toggle_tab_overview

# Splits: Creation & Management
keybind = alt+shift+q=new_split:auto
keybind = alt+shift+w=close_surface
keybind = alt+shift+f=toggle_split_zoom

# Splits: Navigation (Alt+Shift)
keybind = alt+shift+h=goto_split:left
keybind = alt+shift+j=goto_split:bottom
keybind = alt+shift+k=goto_split:top
keybind = alt+shift+l=goto_split:right

# Splits: Resizing (Alt+Ctrl)
keybind = alt+ctrl+h=resize_split:left,10
keybind = alt+ctrl+j=resize_split:down,10
keybind = alt+ctrl+k=resize_split:up,10
keybind = alt+ctrl+l=resize_split:right,10

# Quick Terminal (Internal)
# Note: For global toggling, see Hyprland config (Special Workspace)
